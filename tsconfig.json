{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],

    /* Specify what module code is generated. */
    "module": "CommonJS",

    "allowJs": true,
    "outDir": "./bin",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    // "noEmit": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "$/*": ["./*"]
    }
  },
  "include": ["./src/index.ts", "./src/server.ts"],
  "exclude": ["node_modules", "dist", "build", "bin", ".git"]
}
