{
  "name": "clockify",
  "version": "0.2.0",
  "description": "A time tracker to make sure that you really spent the time you think you spent working, studying, etc.",
  "license": "MIT",
  "keywords": [
    "time tracker",
    "habits tracker"
  ],
  "author": "anasouardini",
  "repository": {
    "url": "https://github.com/anasouardini/trackit"
  },
  "bin": {
    "clockify": "./bin/index.js"
  },
  "scripts": {
    "dev": "nodemon ./src/index.ts ./src/server.ts",
    "format": "prettier . --write",
    "testOnce": "vitest --run",
    "formatCheck": "prettier . --check",
    "lint": "tsc --noEmit",
    "build": "tsc",
    "ci": "npm run formatCheck && npm run lint && npm run testOnce && npm run build",
    "release": "npm run ci && npx changeset && npx changeset publish"
  },
  "dependencies": {
    "sqlite3": "^5.1.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.19",
    "better-sqlite3": "^9.4.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  }
}
